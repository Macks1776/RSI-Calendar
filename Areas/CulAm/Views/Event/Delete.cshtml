@{ }
<div class="jumbotron jumbotron-fluid bg-rsi-blue p-3 mb-3 rounded">
    <div class="container">
        <h1 class="display-6 text-center text-white">Delete Event</h1>
    </div>
</div>

<div class="container mt-5 mb-5 p-5 rsi-form">
    <form>
        <!-- Title -->
        <div class="form-group row">
            <label for="eventeditdescription" class="col-sm-2 col-form-label fw-bold">Title:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value=" Greenjackets Baseball Game">
            </div>
        </div>


        <!-- DATE -->
        <div class="form-group row">
            <label for="eventeditdate" class="col-sm-2 col-form-label fw-bold">Date:</label>
            <label for="eventeditdate" class="col-sm-10 col-form-label fw-bold">9/18/2021</label>
        </div>


        <!-- Time -->
        <div class="form-group row">
            <label for="eventeditdescription" class="col-sm-2 col-form-label fw-bold">Time:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value=" 7:00 PM">
            </div>
        </div>

        <!-- Description -->
        <div class="form-group row">
            <label for="eventeditdescription" class="col-sm-2 col-form-label fw-bold">Description:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value=" A bunch of employees are meeting at the front gate of the greenjacketsgame. Hope you can join us!">
            </div>
        </div>

        <!-- Location -->
        <div class="form-group row">
            <label for="eventeditdescription" class="col-sm-2 col-form-label fw-bold">Location:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value="Augusta, GA">
            </div>
        </div>



        <!-- Type -->
        <div class="form-group row">
            <label for="eventeditdescription" class="col-sm-2 col-form-label fw-bold">Type:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value="Fun with Coworkers">
            </div>
        </div>

        <!-- ATTACHMENTS -->
        <div class="form-group row mt-5">
            <label class="col-sm-2"></label>
            <div class="col-sm-10">
                <fieldset class=" p-3 border border-dark border-1 shadow-sm rounded">
                    <legend class="fw-bold">Attachments:</legend>
                    <label for="eventdetaildescription" class="col-sm-2 col-form-label fw-bold"></label>
                    <!-- NEW EVENTS -->
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value="Fun with Coworkers">
                    </div>
                    <!-- OPTIONAL EVENTS -->
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="eventeditdescription" value="Rewatch the Event">
                    </div>
                    
                </fieldset>
            </div>
        
</div>

        <!-- BUTTONS -->
        <div class="form-group row mt-5">
            <div class="col-sm-2"></div>
            <div class="col-sm-7">
                <div class="btn-group-lg">
                    <!-- Delete -->
                    <input class="btn rsi-btn-blue shadow-sm" type="submit" value="Delete">
                    <!-- Cancel -->
                    <a class="btn rsi-btn-white shadow-sm" type="button" asp-controller="Calendar" asp-action="Month">Cancel</a>
                </div>
            </div>
        </div>

    </form>
</div>

<h1>CulAm/Events/Delete</h1>
