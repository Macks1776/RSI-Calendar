@{ }
<div class="jumbotron jumbotron-fluid bg-rsi-blue p-3 mb-3 rounded">
    <div class="container">
        <h1 class="display-6 text-center text-white">Update User</h1>
    </div>
</div>

<div class="container mt-5 mb-5 p-5 rsi-form">
    <form>
        <!-- FirstName -->
        <div class="form-group row">
            <label for="firstName" class="col-sm-2 col-form-label fw-bold">First Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control shadow-sm" id="firstName" value="John">
            </div>
        </div>

        <!-- LastName -->
        <div class="form-group row">
            <label for="lastName" class="col-sm-2 col-form-label fw-bold">Last Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control shadow-sm" id="lastName" value="Doe">
            </div>
        </div>


        <!-- LOCATION -->
        <div class="form-group row">
            <label for="eventeditlocation" class="col-sm-2 col-form-label fw-bold">Location:</label>
            <div class="col-sm-10">
                <select class="custom-select shadow-sm" id="eventeditlocation">
                    <option value="1">Albuquerque, NM</option>
                    <option value="2" selected>Augusta, GA</option>
                    <option value="3">Fort Wayne, IN</option>
                    <option value="4">Jonesboro, AR</option>
                    <option value="5">Madison, WI</option>
                    <option value="6">Milwaukee, WI</option>
                    <option value="7">Mobile, AL</option>
                    <option value="8">Oklahoma City, OK</option>
                </select>
            </div>
        </div>

        <!-- Role -->
        <div class="form-group row">
            <label for="RoleName" class="col-sm-2 col-form-label fw-bold">Role:</label>
            <div class="col-sm-10">
                <select class="custom-select shadow-sm" id="RoleName">
                    <option value="1">User</option>
                    <option value="2" selected>Admin</option>
                    <option value="3">Cultural Ambassador</option>
                </select>
            </div>
        </div>

        <!-- Email -->
        <div class="form-group row">
            <label for="userEmail" class="col-sm-2 col-form-label fw-bold">Email:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control shadow-sm" id="userEmail" value="jdoe@smartweb.augustatech.edu">
            </div>
        </div>

        <!-- Password -->
        <div class="form-group row">
            <label for="eventedittime" class="col-sm-2 col-form-label fw-bold">Password:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control shadow-sm" id="eventeditdate" value="abc123">
            </div>
        </div>

        <!-- BUTTONS -->
        <div class="form-group row mt-5">
            <div class="col-sm-2"></div>
            <div class="col-sm-7">
                <div class="btn-group-lg">
                    <!-- Save -->
                    <input class="btn rsi-btn-blue shadow-sm" type="submit" value="Save">
                    <!-- Cancel -->
                    <a class="btn rsi-btn-white shadow-sm" type="button" asp-controller="Calendar" asp-action="Month">Cancel</a>
                </div>
            </div>
        </div>


    </form>
</div>



<h1>Admin/User/Edit</h1>
