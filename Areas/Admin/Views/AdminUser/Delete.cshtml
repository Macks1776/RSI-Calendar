@model Employee
<!-- JUMBOTRON -->
<div id="delete-jumbotron" class="jumbotron jumbotron-fluid bg-rsi-blue p-3 mb-3 rounded">
    <div class="container">
        <h1 class="display-6 text-center  text-rsi-red">Are you sure you want to delete this user?</h1>
    </div>
</div>

<div id="delete-form" class="container rsi-form">
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" asp-action="Delete">

        <!-- FIRST NAME -->
        <div class="form-group row">
            <label for="eventEditFName" class="col-sm-2 col-form-label fw-bold">First Name:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventEditFName" value="Keyla">
            </div>
        </div>

        <!-- LAST NAME -->
        <div class="form-group row">
            <label for="eventEditLName" class="col-sm-2 col-form-label fw-bold">Last Name:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventEditLName" value="Hobbs">
            </div>
        </div>

        <!-- EMAIL -->
        <div class="form-group row">
            <label for="eventEditEmail" class="col-sm-2 col-form-label fw-bold">Email:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventEditEmail" value="Khobbs89@gmail.com">
            </div>
        </div>

        <!-- Location -->
        <div class="form-group row">
            <label for="eventEditLocation" class="col-sm-2 col-form-label fw-bold">Branch:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventEditLocation" value="Augusta">
            </div>
        </div>

        <!-- Role -->
        <div class="form-group row">
            <label for="eventEditRole" class="col-sm-2 col-form-label fw-bold">Role:</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="eventEditRole" value="User">
            </div>
        </div>

        <div class="form-group row mt-5">
            <div class="col-sm-2"></div>
            <div class="col-sm-7">
                <div class="btn-group-lg">
                    <!-- Delete -->
                    <input class="btn rsi-btn-red shadow-sm" type="submit" value="Delete">
                    <!-- CANCEL -->
                    <a class="btn rsi-btn-white shadow-sm" type="button" asp-area="" asp-controller="Calendar" asp-action="Calendar">Cancel</a>
                </div>
            </div>
        </div>

    </form>
</div>