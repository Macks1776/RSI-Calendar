@model Employee




<div class="jumbotrol jumbotron-fluid bg-rsi-blue p-3 mb-3 rounded">
    <div class="container">
        <h1 class="display-6 text-center text-white"> Edit Employee</h1> <!--@ViewBag.Action-->
    </div>
</div>

<div class="container rsi-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" asp-action="Edit">

        <!-- FIRST NAME -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label fw-bold">First Name:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control shadow-sm" asp-for="FName" />
            </div>
        </div>

        <!-- LAST NAME -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label fw-bold">Last Name:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control shadow-sm" asp-for="LName" />
            </div>
        </div>

        <!-- EMAIL -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label fw-bold">Email:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control shadow-sm" asp-for="Email" />
            </div>
        </div>

        <!-- LOCATION -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label fw-bold">Branch:</label>
            <div class="col-sm-7">
                <select asp-for="Location" class="form-select shadow-sm" aria-label="Location Selection">
                    <option selected value="Location">Location</option>
                    <option value="Augusta, GA">Augusta, GA</option>
                    <option value="Albuquerque, NM">Albuquerque, NM</option>
                    <option value="FortWayne, IN">FortWayne, IN</option>
                    <option value="Jonesboro, AR">Jonesboro, AR</option>
                    <option value="Madison, WI">Madison, WI</option>
                    <option value="Milwaukee, WI">Milwaukee, WI</option>
                    <option value="Mobile, AL">Mobile, AL</option>
                    <option value="Oklahoma City, OK">Oklahoma City, OK</option>
                </select>
            </div>
        </div>

        <!-- Role -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label fw-bold">Role:</label>
            <div class="col-sm-7">
                <select asp-for="Role" class="form-select shadow-sm" aria-label="Role Selection">
                    <option selected value="user">User</option>
                    <option value="admin">Admin</option>
                    <option value="culam">Cultural Ambassador</option>
                </select>
            </div>
        </div>

        <!-- PASSWORD -->
        <div class="form-group row top-50">
            <label for="AdminEditSettingsPassword" class="col-sm-2 col-form-label fw-bold">Password:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control shadow-sm rsi-password" id="AdminEditSettingsPassword" value="">
            </div>
        </div>

        <!--CONFIRM PASSWORD -->
        <div class="form-group row top-50">
            <label for="AdminEditSettingsConfirmPassword" class="col-sm-2 col-form-label fw-bold"> Confirm Password:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control shadow-sm rsi-password" id="AdminEditSettingsConfirmPassword" value="">
            </div>
        </div>

        <!-- SHOW/HIDE PASSWORD -->
        <div class="form-group row top-50">
            <label class="col-sm-2"></label>
            <div class="col-sm-7">
                <label class="form-check-label" for="AdminEditSettingsShowPassword">Show Password?</label>
                <input class="form-check-input passwordToggle" type="checkbox" id="AdminEditSettingsShowPassword" onclick="toggle_password();">
            </div>
        </div>

