@model ResetPasswordViewModel
@{ 
    ViewData["Title"] = "Reset Password";
}

<div class="jumbotrol jumbotron-fluid bg-rsi-blue p-3 mb-3 rounded">
    <div class="container">
        <h1 class="display-6 text-center text-white">Reset Password</h1>
    </div>
</div>

<form asp-action="ResetPassword" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Password"></label>
        </div>
        <div class="col-7">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ConfirmPassword"></label>
        </div>
        <div class="col-7">
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <input asp-for="Email" type="hidden" class="form-control" />
        <input asp-for="Token" type="hidden" class="form-control" />

    </div>
    <button class="btn rsi-btn-blue" type="submit">Submit</button>
</form>