@{ ViewData["Title"] = "Month View"; }

<!--This is a calendar using the full library, which i think will be the easiest way. Just need to figure out a way to get JavaScript to read our table and populate the events-->

<div id="calendar" class="rsi_form"></div>

<!-- Calendar Legend -->
<div id="CalendarLegend" class="row">
    <div class="col-sm-3">
        <img src="/images/blue-calendar-icon.png" class="figure-img img-fluid rounded" alt="Blue Event">
        <figcaption class="figure-caption">Educational</figcaption>
    </div>
    <div class="col-sm-3">
        <img src="/images/red-calendar-icon.png" class="figure-img img-fluid rounded" alt="Red Event">
        <figcaption class="figure-caption">Required</figcaption>
    </div>
    <div class="col-sm-3">
        <img src="/images/green-calendar-icon.png" class="figure-img img-fluid rounded" alt="Green Event">
        <figcaption class="figure-caption">Fun With Co-Workers</figcaption>
    </div>
    <div class="col-sm-3">
        <img src="/images/yellow-calendar-icon.png" class="figure-img img-fluid rounded" alt="Yellow Event">
        <figcaption class="figure-caption">Family Fun</figcaption>
    </div>
</div>

<!-- Input Modal for Jump To Date -->
<div id="DateJumper" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Jump to Month and Year</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <select id="MonthPicker" class="form-select" aria-label="Select Month">
                    <option selected value="01">January</option>
                    <option value="02">February</option>
                    <option value="03">March</option>
                    <option value="04">April</option>
                    <option value="05">May</option>
                    <option value="06">June</option>
                    <option value="07">July</option>
                    <option value="08">August</option>
                    <option value="09">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                <select id="YearPicker" class="form-select" aria-label="Select Year">
                    <option selected value="2021">2021</option>
                    <option value="2010">2010</option>
                    <option value="2011">2011</option>
                    <option value="2012">2012</option>
                    <option value="2013">2013</option>
                    <option value="2014">2014</option>
                    <option value="2015">2015</option>
                    <option value="2016">2016</option>
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                    <option value="2022">2022</option>
                    <option value="2023">2023</option>
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                    <option value="2026">2026</option>
                    <option value="2027">2027</option>
                    <option value="2028">2028</option>
                    <option value="2029">2029</option>
                    <option value="2030">2030</option>
                </select>
            </div>
            <div class="modal-footer">
                <button id="SubmitJump" type="button" class="btn rsi-btn-blue">Go</button>
            </div>
        </div>
    </div>
</div>